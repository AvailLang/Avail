/**
 * Make available {@code closure} and its types, {@code compiled code}, {@code
 * continuation} and its type, and {@code process}.
 * 
 * @author Todd L Smith &lt;anarakul@gmail.com&gt;
 */
Module
	"Code"
Extends
Uses
	"Bootstrap",
	"Types"
Names
	"closure",
	"closure type",
	"compiled code",
	"continuation",
	"continuation type",
	"generalized closure type",
	"process"
Body

/** The compiler needs this in order to specify "generalized closure type". */
privateGeneralizedClosureType ::= Special Object 16;

/**
 * @returns The type of a closure with unspecified arguments and covariant
 *          return type.
 */
Method "generalized closure type" is
[
	privateGeneralizedClosureType;
] : meta;

/** The compiler needs this in order to specify "closure type". */
privateClosureType ::= Special Object 5;

/**
 * @return The type of {@code closure}.
 */
Method "closure type" is
[
	privateClosureType;
] : meta;

/** The compiler needs this in order to specify "closure". */
privateClosure ::= Special Object 4;

/**
 * @return The supertype of every specific closure type.
 */
Method "closure" is
[
	privateClosure;
] : closure type;

/** The compiler needs this in order to specify "continuation type". */
privateContinuationType ::= Special Object 10;

/**
 * @return The type of {@code continuation}.
 */
Method "continuation type" is
[
	privateContinuationType;
] : meta;

/** The compiler needs this in order to specify "continuation". */
privateContinuation ::= Special Object 9;

/**
 * @return The supertype of every specific continuation. 
 */
Method "continuation" is
[
	privateContinuation;
] : continuation type;

/** The compiler needs this in order to specify "compiled code". */
privateCompiledCode ::= Special Object 6;

/**
 * @return The type of compiled code.
 */
Method "compiled code" is
[
	privateCompiledCode;
] : primitive type;

/** The compiler needs this in order to specify "process". */
privateProcess ::= Special Object 27;

/**
 * @return The type of a process.
 */
Method "process" is
[
	privateProcess;
] : primitive type;
