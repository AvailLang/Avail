Module "File Test Utilities"
Versions
	"1.0.0 DEV 2014-04-28"
Uses
	"Common" = ("test directory"),
	"Data Abstractions",
	"Foundation",
	"File Access Rights",
	"File Names"
Names
	/* File names. */
	"abracadabra.txt",
	"scratch.txt",

	/* Potentially unsupported operations. */
	"Try_",

	/* Initialization. */
	"Set standard file access rights",

	/* Utilities. */
	"Randomly permute file access rights for__times"
Body

Public method "abracadabra.txt" is
[
	./test directory/"abracadabra.txt"
];

Public method "scratch.txt" is
[
	./test directory/"scratch.txt"
];

Public method "Try_" is
[
	aFunction : []→⊤
|
	Guard aFunction
	intercept [e : unsupported-operation exception | /* Ignore. */];
] : ⊤;

Public method "Set standard file access rights" is
[
	Try
	[
		abracadabra.txt's access rights := {owner read, group read};
		scratch.txt's access rights := {owner read, group read};
	];
];

Public method "Randomly permute file access rights for__times" is
[
	f : [{file access right|0..9}]→⊤,
	count : whole number
|
	allRights ::=
		cast file access right's instances→tuple
		into [t : <file access right…|9> | t];
	rng ::= a pRNG;
	Repeat
	[
		n ::= rng's next [0..12];
		rights : {file access right|} := ∅;
		Repeat [rights := rights + rng's next element of allRights;] n times;
		f(cast rights into [t : {file access right|0..9} | t]);
	] count times;
];
