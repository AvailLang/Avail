	iters ::= <
		a counting reader from 1 to 10,
		map a counting reader from 1 to 10
			through [n : [1..10] | n × n]>;
	iter ::= zip iters;
	For each iter do
	[
		element : <[1..10], [1..100]…|2>
	|
		Require: element = ref[(index++)];
	];
	Require: index = (|ref| + 1);
];

