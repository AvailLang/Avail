Module "NybblecodeEncoding"
Extends
Uses
	"Kernel"
Names
	"callNybbles",
	"pushLiteralNybbles",
	"pushLocalLastNybbles",
	"pushLocalNybbles",
	"pushOuterLastNybbles",
	"closeNybbles",
	"setLocalNybbles",
	"getLocalClearingNybbles",
	"pushOuterNybbles",
	"popNybbles",
	"getOuterClearingNybbles",
	"setOuterNybbles",
	"getLocalNybbles",
	"getOuterNybbles",
	"makeTupleNybbles",
	"pushLabelNybbles",
	"getLiteralNybbles",
	"setLiteralNybbles"
Body


/*
 * Named nybblecodes... These values and layouts are known by the virtual
 * machine, so don't change them unless you know what you're doing.  These are
 * listed in numerical order, which (roughly) corresponds to their static
 * frequency.
 */

Method "callNybbles" is [<0>;];
Method "pushLiteralNybbles" is [<1>;];
Method "pushLocalLastNybbles" is [<2>;];
Method "pushLocalNybbles" is [<3>;];
Method "pushOuterLastNybbles" is [<4>;];
Method "closeNybbles" is [<5>;];
Method "setLocalNybbles" is [<6>;];
Method "getLocalClearingNybbles" is [<7>;];
Method "pushOuterNybbles" is [<8>;];
Method "popNybbles" is [<9>;];
Method "getOuterClearingNybbles" is [<10>;];
Method "setOuterNybbles" is [<11>;];
Method "getLocalNybbles" is [<12>;];
Method "makeTupleNybbles" is [<13>;];
Method "getOuterNybbles" is [<14>;];
Method "pushLabelNybbles" is [<15,0>;];
Method "getLiteralNybbles" is [<15,1>;];
Method "setLiteralNybbles" is [<15,2>;];

