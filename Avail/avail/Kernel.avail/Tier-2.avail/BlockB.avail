System Module "BlockB"
Extends
Uses
	"Tier-1",
	"BlockA",
	"Continuation",
	"Number",
	"Tuple"
Names
	"stub block with function type_invoking_"
Body

Restriction "_(«_‡,»)" is [blkType : functionType, argsType : tupleType |
	/* The arguments are a guillemet group, so the exact count is known at the
	 * call site.
	 */
	size ::= argsType sizes lower bound;
	Assert size = argsType sizes upper bound;
	if blkType arguments type sizes not = argsType sizes then [
		Fail parse (blkType arguments type sizes as basic string)
			then " arguments to function, not "
			then (argsType sizes as basic string)];
	From 1 to size do [i : natural number |
		if not argsType[i] <= blkType[i] then [
			Fail parse "Argument #"
				then i as basic string
				then " ("
				then argsType[i] as basic string
				then ") to be a subtype of ("
				then blkType[i] as basic string
				then ") for this function invocation."];];
	blkType result
];


/**
 * Advanced stub building.  This is for when you *need* a block with
 * a particular signature, and it must invoke some code with the
 * arguments bundled in a tuple.
 */
Method "stub block with function type_invoking_" is [
	newFunctionType : functionType,
	functionToInvoke : function |
	Primitive 71;
] : [...]-> void;
