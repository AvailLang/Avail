System Module "Test-Date-Time"
Extends
Uses
	"Tier-3",
	"Date-Time"
Names
Body


Assert 13:22:22:2 as string = "13:22:22 UTC";

Assert year 2001 month 3 day 16 as string = "2001-03-16";

Assert today's date size > Unix Epoch size;

Assert meridiem form of 13:22:22:2 = "1:22 PM";

currentTime : time := the current time in EST;

Assert 5:56 EST as string = "05:56:00 EST";

tr : date := year 2012 month 1 day 4;
adt : date := year 1971 month 1 day 1;

Assert Subtract adt from tr in "months" = 492;

Assert Subtract Unix Epoch from adt = 1;

Assert Unix Epoch size = 19700101;

Assert Unix Epoch as string = "1970-01-01T00:00:00 UTC";

bdadt : date := year 1979 month 3 day 29;
	
Assert Subtract bdadt from tr in "days" = 11970;	
