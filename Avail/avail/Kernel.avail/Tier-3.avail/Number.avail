System Module "Number"
Extends
Uses
	"Tier-2"
	
Names
	"an integer",
	"a float",
	"convert_to integer",
	"convert_to float"

Body

Method "an integer" is [integer;];
Method "a float" is [float;];

/** Conversions **/

/* Convert string to integer */
Method "convert_to integer" is
[
	str : string
|
	if str[1] = $"-" then 
	[
		stream : string := "";
		
		stream := stream then (str[2..||str||]);
		
		(-1) * (10 r stream);
	] else 
	[
		10 r str;
	];
]: integer;

/* Convert string to float */
Method "convert_to float" is
[
	str : string
|
	decimalLocation : natural number := 1;
	wholeNumStream : string := "";
	decimalStream : string := "";
	
	Until [ str[decimalLocation] = $"."; ]
	loop
	[
		decimalLocation := decimalLocation + 1;
	];

	wholeNumStream := wholeNumStream then (str[1..(decimalLocation - 1)]);	

	decimalStream := decimalStream then (str[(decimalLocation + 1)..||str||]);	

	wholeNum : integer := convert wholeNumStream to integer;

	decimalUnit : float := 
		((convert decimalStream to integer) as float) / (10^||decimalStream||);

	if wholeNum < 0 then
	[
		wholeNum - decimalUnit;
	] else
	[
		wholeNum + decimalUnit;
	];
]: float;
