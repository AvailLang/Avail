System Module "CompiledCode"
Extends
Uses
	"Tier-0",
	"Block",
	"Integer",
	"Tuple"
Names
	"_numArgs",
	"_numLocals",
	"_numOuters",
	"_stackSize",
	"_nybbles",
	"_functionType",
	"_literals",
	"_primitive",
	"_#_:_(literals=_,#locals_,#outers_,stack depth=_)"
Body


/* Here are some accessors to manipulate compiledCode objects... */

Method "_numArgs" is [cc : compiledCode |
	Primitive 180;
] : whole number;

Method "_numLocals" is [cc : compiledCode |
	Primitive 181;
] : whole number;

Method "_numOuters" is [cc : compiledCode |
	Primitive 182;
] : whole number;

Method "_stackSize" is [cc : compiledCode |
	Primitive 183;
] : whole number;

Method "_nybbles" is [cc : compiledCode |
	Primitive 184;
] : tuple of [0..15];

Method "_functionType" is [cc : compiledCode |
	Primitive 185;
] : functionType;

Method "_primitive" is [cc : compiledCode |
	Primitive 186;
] : [0..65535];

Method "_literals" is [cc : compiledCode |
	Primitive 187;
] : tuple;

/* Construction... */

Method "_#_:_(literals=_,#locals_,#outers_,stack depth=_)" is [
		nybbles : tuple of [0..15],
		prim : [0..65535],
		functionType : functionType,
		literals : tuple,
		numLocals : whole number,
		numOuters: whole number,
		stackSize : whole number |
	Primitive 188 (failureCode : natural number);
	Failed;
] : compiledCode;

