System Module "Atom"
Extends
	"Tier-0"
Uses
	"Tuple"
Names
	"new atom_",
	"_name",
	"_property[_]?",
	"_property[_]",
	"_property[_]:=_",
	"_property[_]:=nil"
Body


Method "new atom_" is [name : string |
	Primitive 120;
] : atom;

Method "_name" is [a : atom |
	Primitive 121;
] : string;

Method "_property[_]?" is [
		a : atom,
		propertyKey : atom |
	Primitive 122 (failureCode : natural number);
	Failed;
] : boolean;

Method "_property[_]" is [
		a : atom,
		propertyKey : atom |
	Primitive 123  (failureCode : natural number);
	Failed;
] : any;

Method "_property[_]:=_" is [
		a : atom,
		propertyKey : atom,
		propertyValue : any |
	Primitive 124 (failureCode : natural number);
	Failed;
] : void;

Method "_property[_]:=nil" is [
		a : atom,
		propertyKey : atom |
	Primitive 125 (failureCode : natural number);
	Failed;
] : void;
