System Module "Syntax"
Extends
	"Tier-4"
Uses
Names
	"_yielding_",
	"Macro_is_",
	"make assignment variable_expression_",
	"_expression type",
	"_:=_",
	"(_:=_)",
	"&_",
	"…:_",
	"…::=_",
	"…:_:=_",
	"$…:_",
	"…",
	"[««…:_‡,»`|»«$…:_;»«_;»]«:_»"
Body



/* Parse node type construction. */
Method "_yielding_" is [
		parseNodeType : parseNode type,
		expressionType : type |
	Primitive 355;
] : parseNode type;


Method "Macro_is_" is [name : string, block : [...]-> parseNode |
	Primitive 249 (failureCode : natural number);
	Failed
] : void;


Method "make assignment variable_expression_" is [
		v : variableUseNode yielding any,
		e : expressionNode yielding any|
	Primitive 353 (failureCode : natural number);
	Crash "Failed to create assignment"
] : parseNode;


Method "_expression type" is [
		e : parseNode |
	Primitive 351;
] : type;


Macro "_:=_" is
[
v : variableUseNode yielding any, e : expressionNode yielding any|
	Primitive 353 (failureCode : natural number);
	Failed
] : parseNode;


Macro "(_:=_)" is
[
	v : variableUseNode yielding any, e : expressionNode yielding any |
	Primitive 350 (failureCode : natural number);
	Failed
] : parseNode;

Macro "&_" is [v : variableUseNode yielding any |
	Primitive 354 (failureCode : natural number);
	Failed
] : parseNode;
