System Module "File Names Test"
Versions
	"dev"
Uses
	"Common" =
	(
		"I/O test suite",
		"test directory"
	),
	"File Access Rights",
	"File Names",
	"Foundation",
	"Unit Testing"
Names
	"file names test suite"
Body

"file names test suite" is a new atom;
New test suite file names test suite extends I/O test suite;

Private method "abracadabra.txt" is
[
	a file named test directory ++ "/abracadabra.txt"
];

Before running each test in file names test suite, do
[
	fn ::= abracadabra.txt;
	fn's access rights := {owner read, group read, others read};
];

Test "exists" in file names test suite is
[
	fn1 ::= abracadabra.txt;
	fn2 ::= a file named test directory ++ "/doesnotexist.txt";
	Require: fn1 exists;
	Require: ¬fn2 exists;
];
