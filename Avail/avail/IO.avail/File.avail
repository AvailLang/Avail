System Module "File"
Extends
Uses
	"Kernel"
Names
	"File",
	"_named_",
	"_exists",
	"_is readable",
	"_is writable",
	"_is executable",
	"Rename_to_",
	"Unlink_from filesystem",
	"_position",
	"_size",
	"_go to_",
	"Close_",
	"handle"
Body


/* I define the simple file i/o operations for Avail. */

privateHandle ::= lookup "handle";

Method "handle" is [privateHandle];

"File" is explicit subtype of Object with
	handle->atom;

File has fields <"handle">;


/* Instance creation... */

Abstract method "_named_" for [File type, string]->File;

Restriction "_named_" is
[
	ft : File type type,
	s : string type
|
	ft instance
];

/* Filename inquiries... */

Method "_exists" is [filename : string |
	Primitive 170 (failureCode : natural number);
	Failed
] : boolean;

Method "_is readable" is [filename : string |
	Primitive 171 (failureCode : natural number);
	Failed
] : boolean;

Method "_is writable" is [filename : string |
	Primitive 172 (failureCode : natural number);
	Failed
] : boolean;

Method "_is executable" is [filename : string |
	Primitive 173 (failureCode : natural number);
	Failed
] : boolean;


/* Filename operations... */

Method "Rename_to_" is [source : string, destination : string |
	Primitive 174 (failureCode : natural number);
	Failed
] : void;

Method "Unlink_from filesystem" is [filename : string |
	Primitive 175 (failureCode : natural number);
	Failed
] : void;

/* Basic accessing... */

Method "_position" is [file: File |
	[handle : atom |
		Primitive 167 (failureCode : natural number);
		Failed
	] : whole number (file handle)
] : whole number;

Method "_size" is [file : File |
	[handle : atom |
		Primitive 166 (failureCode : natural number);
		Failed
	] : whole number (file handle)
] : whole number;

Method "_is at end" is [file : File |
	file position + 1 > file size
] : boolean;

Method "_go to_" is [file : File, newPosition : whole number |
	[handle : atom, newPosition2 : whole number |
		Primitive 168 (failureCode : natural number);
		Failed
	] : void (file handle, newPosition);
] : void;

Method "Close_" is [file : File |
	[handle : atom |
		Primitive 163 (failureCode : natural number);
		Failed
	] : void (file handle);
] : void;
