		else if expectedValue ‚àà variable then
		[
			expectedVariable ::= expectedValue ?‚Üí ‚Üëstring;
			actualVariable ::= expectedValue ?‚Üí ‚Üëstring;
			If ‚ÜìactualVariable ‚â† ‚ÜìexpectedVariable then
			[
				failed := eject failed ++ <index>;
			];
		]
		/* All other values in the input tuple are identityless. */
		else if actualValue ‚â† expectedValue then
		[
			failed := eject failed ++ <index>;
		];
	];
	Require: failed = <> ("serialization failed");
];

