		expectedValue ::= expected[index];
		actualValue ::= actualTuple[index];
		/* Function implementations have identity. */
		If expectedValue ‚àà function implementation then
		[
			expectedImplementation ::= expectedValue ?‚Üí function implementation;
			actualImplementation ::= actualValue ?‚Üí function implementation;
			If actualImplementation's nybblecodes
				‚â† expectedImplementation's nybblecodes then
			[
