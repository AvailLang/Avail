Module "Subtraction Tests"
Versions
	"Avail-1.6.0"
Uses
	"Primitive Test Common"
Body

Test "Subtraction ok" in primitive numbers test suite is
[
	For each i from 1 to 10 do
	[
		Require: i - 0 = i;
		Require: i - i = 0;
		Require: i - -i = i + i;
		For each j from 1 to 10 do [Require: i - j = -(j - i); ];
	];
	Require: -2147483648 - 1 = -2147483649;
	Require: -9223372036854775808 - 1 = -9223372036854775809;
	Require: 2222222222222222222222222 - 1111111111111111111111111
		= 1111111111111111111111111;
	Require: ∞ - 1 = ∞;
	Require: ∞ - -∞ = ∞;
	Require: -∞ - 1 = -∞;
	Require: -∞ - ∞ = -∞;
	Require: 2.0f - 1.0f = 1.0f;
	Require: 2.0 - 1.0 = 1.0;
	Require: 2 - 1.0f = 1.0f;
	Require: 2 - 1.0 = 1.0;
	Require: 2.0f - 1.0 = 1.0;
];

Test "Subtraction fails with cannot-subtract-like-infinities exception" in primitive numbers test suite is
[
	/* Hide ∞ from the compiler. */
	v : extended integer := ∞;
	Require: [v - v] raises cannot-subtract-like-infinities exception;
	Require: [-v - -v] raises cannot-subtract-like-infinities exception;
];

